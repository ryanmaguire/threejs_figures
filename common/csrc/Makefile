# C Compilation settings
CC = emcc
CFLAGS = -I./ -Wall -Wextra -Wpedantic -O3 -flto

# Location of the C code, and the build directory for C code.
C_SRC_DIR = threetools
BUILD_DIR = cbuild

# Find all C source files
C_SRCS = $(wildcard $(C_SRC_DIR)/*.c)
C_OBJS = $(patsubst $(C_SRC_DIR)/%.c,$(BUILD_DIR)/%.o,$(C_SRCS))

# JavaScript output files generated by emscripten.
LIBRARY_FILE = libthreetools.a

# Functions exported by emscripten.
FUNCTIONS = "[              \
    '_rotate_mesh',         \
    '_index_buffer_address',\
    '_mesh_buffer_address', \
    '_set_rotation_angle'   \
]"

# Emscripten flags used for exporting the functions into a JavaScript module.
JS_FLAGS = -s MODULARIZE=1 -s EXPORT_ES6=1 -s EXPORT_NAME=initModule
EXPORT_FUNCS = -s EXPORTED_FUNCTIONS=$(FUNCTIONS)
EXPORT_METHODS = -s EXPORTED_RUNTIME_METHODS='["HEAP8"]'
EXPORTS = $(EXPORT_FUNCS) $(EXPORT_METHODS)
EMSCRIPTEN_FLAGS = $(JS_FLAGS) $(EXPORTS)

.PHONY: all clean

all: $(LIBRARY_FILE)

$(BUILD_DIR)/%.o: $(C_SRC_DIR)/%.c
	@mkdir -p $(BUILD_DIR)
	$(CC) $(CFLAGS) $< -c -o $@

$(LIBRARY_FILE): $(C_OBJS)
	$(CC) $(CFLAGS) $(C_OBJS) -o $(LIBRARY_FILE) $(EMSCRIPTEN_FLAGS)

clean:
	rm -rf $(BUILD_DIR) $(RUST_PKG_DIR) $(RUST_TARGET_DIR)
	rm -f $(LIBRARY_FILE)
