# C Compilation settings
CC = emcc
CFLAGS = -Wall -Wextra -Wpedantic -O3 -flto

# Location of the C code, and the build directory for C code.
SRC_DIR = csrc
BUILD_DIR = cbuild

# Location of the optional JavaScript code. C is used by default.
JS_SRC_DIR = jssrc

# Location of the optional Rust code. C is used by default.
RUST_SRC_DIR = rustsrc
RUST_PKG_DIR = pkg
RUST_TARGET_DIR = target

# Location of the optional Go code.
GOSRC = gosrc
GO_GLUE = wasm_exec.js

# Required flags for compiling Go to WebAssembly.
GO_FLAGS = GOOS=js GOARCH=wasm

# Find all C source files
SRCS = $(wildcard $(SRC_DIR)/*.c)
OBJS = $(patsubst $(SRC_DIR)/%.c,$(BUILD_DIR)/%.o,$(SRCS))

# Alias file for renaming functions to camelCase for use in JavaScript.
POSTJS_FILE = $(SRC_DIR)/postjs.js

# JavaScript output files generated by emscripten.
MAIN_FILE = main.js
WASM_FILE = main.wasm

# Functions exported by emscripten.
FUNCTIONS = "[            \
    '_rotate_mesh',       \
	'_generate_indices',  \
    '_generate_mesh',     \
    '_get_index_buffer',  \
    '_get_mesh_buffer',   \
    '_set_rotation_angle' \
]"

# Emscripten flags used for exporting the functions into a JavaScript module.
JS_FLAGS = -s MODULARIZE=1 -s EXPORT_ES6=1 -s EXPORT_NAME=initModule
EXPORTS = -s EXPORTED_FUNCTIONS=$(FUNCTIONS) -s EXPORTED_RUNTIME_METHODS='["HEAP8"]'
POST_JS = --post-js $(POSTJS_FILE)
EMSCRIPTEN_FLAGS = $(JS_FLAGS) $(EXPORTS)

.PHONY: all clean js rust go

all: $(MAIN_FILE) $(WASM_FILE)

$(BUILD_DIR)/%.o: $(SRC_DIR)/%.c
	@mkdir -p $(BUILD_DIR)
	$(CC) $(CFLAGS) $< -c -o $@

$(MAIN_FILE) $(WASM_FILE): $(OBJS) $(POSTJS_FILE)
	$(CC) $(CFLAGS) $(OBJS) -o $(MAIN_FILE) $(EMSCRIPTEN_FLAGS)

clean:
	rm -rf $(BUILD_DIR) $(RUST_PKG_DIR) $(RUST_TARGET_DIR)
	rm -f $(MAIN_FILE) $(WASM_FILE) $(GO_GLUE)

js:
	cp $(JS_SRC_DIR)/$(MAIN_FILE) .

rust:
	wasm-pack build --target web
	cp $(RUST_SRC_DIR)/$(MAIN_FILE) .

go:
	$(shell cd $(GOSRC) && $(GO_FLAGS) go build -o $(WASM_FILE) .)
	cp "$(shell go env GOROOT)/misc/wasm/$(GO_GLUE)" .
	mv $(GOSRC)/$(WASM_FILE) .
